    <body>
        <div class="container-fluid">
            <div class="row no-gutter superhead">
                <div class="col-lg-2 col-md-4 col-sm-4 col-xs-4 logohead"><img class="img-fluid"  src="{{ asset('images/gmedia_logo.png') }}" border="0"/></div>

